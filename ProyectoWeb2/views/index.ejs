<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/estilos">
    <title>Pagina de Proyecto Final</title>
</head>
<body>
    <div class="container">
        <h1 class="main-title">Usuarios Registrados</h1>
        
        <table class="user-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user =>{  %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.nombre %></td>
                    <td><%= user.email %></td>
                    <td>
                        <a href="/editar/<%= user.id %>" class="edit-link">Editar</a> |
                        <a href="/eliminar/<%= user.id %>" class="delete-link">Eliminar</a>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
        
        <div class="actions">
            <a href="/registrar" class="add-user">Usuario Nuevo</a>
        </div>
    </div>
</body>
</html>
